# Django Settings Configuration
# Copy this file to .env and modify the values as needed for your environment

# Secret key for Django - CHANGE THIS IN PRODUCTION!
SECRET_KEY=django-insecure-e$&e#zss4*+53a*_%)_5%&l%*4$(zadnz6t23#pio8q&51zxz^

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - Comma-separated list of allowed hostnames
# Use * for all hosts
ALLOWED_HOSTS=*

# CSRF trusted origins - Comma-separated list of trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database configuration
DATABASE_URL=sqlite://db.sqlite3

# CORS Configuration
# Whether to allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=True

# Allow all origins (for development) - Set to False in production
CORS_ALLOW_ALL_ORIGINS=True

# Specific allowed origins (comma-separated) - Used when CORS_ALLOW_ALL_ORIGINS=False
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Allowed headers for CORS requests
# Use * to allow all headers, or specify comma-separated list
CORS_ALLOWED_HEADERS=*

# Allowed HTTP methods for CORS requests (comma-separated)
# CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# CORS preflight cache max age in seconds
CORS_PREFLIGHT_MAX_AGE=86400